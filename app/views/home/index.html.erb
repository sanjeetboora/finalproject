<head>
	<meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1">
	<title>Material Card</title>
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
 	<link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
  <%= stylesheet_link_tag    'questionlist', media: 'all', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>
<body>
  <!-- <div class="col s12"> -->
<!-- <div class="container"> -->
  <div class="createQuestion">
  <%= form_for @question, remote: true do |task|%>
      <%= task.label :title %><br>
      <%= task.text_area :title %><br>
      <%= task.label :content %><br>
      <%= task.text_area :content %><br>
      <div class="actions">
        <%= task.submit id: 'create_question_submit' %>
      </div>
  <% end %>
  <% if @question.errors.any? %>
      <% @question.errors.full_messages.each do |message| %>
          <%= message %>
      <% end %>
  <% end %>
</div>
<!-- </div> -->
 <!-- <div class="container"> -->
     <div class="row">

  <div id="questions">
    <% @feed.each do |question| %>
<%= render 'question' , question: question %>
<% end %>
  </div>
  </div>
<!-- </div> -->

