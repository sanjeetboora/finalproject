<script type="text/javascript">
$(document).ready(function(){
  // the "href" attribute of the modal trigger must specify the modal ID that wants to be triggered
  $('#modal2').modal({
    dismissible: true
  });
  $('#modal2').modal('open');
  $('.trigger-modal').modal();
  $('#modal2').modal('close');
});
</script>


</body>
