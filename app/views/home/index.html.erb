<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Material Card</title>

</head>
<body>
  <a class="waves-effect waves-light btn modal-trigger" href="#modal2">Modal</a>
  <div id="modal2" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h4>Modal Header</h4>
      <div class="createQuestion">
      <%= form_for @question, remote: true do |task|%>
          <%= task.text_field :title, class:'validate', id:'title' %>
           <%= task.label :title, for:'title' %><br>
          < <%= task.text_field :content, class:'validate',id:'content' %><br>
          <%= task.label :content, for:'content' %><br>

          <div class="actions">
              <%= task.submit id: 'create_question_submit' %>
          </div>
      <% end %>
      <% if @question.errors.any? %>
          <% @question.errors.full_messages.each do |message| %>
              <%= message %>
          <% end %>
      <% end %>
    </div>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
    </div>
  </div>
  <!-- <div class="col s12"> -->
  <!-- <div class="container"> -->
  <div id="questions">
  <div class="row">


      <% @feed.each do |question| %>
       <!-- <div class="col s12 m12 l12"> -->
        <%= render 'question' , question: question %>
  <!-- </div> -->
      <% end %>
  </div>

  </div>


 <!-- </div> -->
