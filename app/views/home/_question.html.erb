<%= stylesheet_link_tag    'questionlist', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css"> -->

  <div class="col s12 m6 l6">
    <aside class="card ques" elevation="2">

  <div class="question">
      <div class="userDetail">
		<header>
			<figure elevation="1"></figure>
			<div class="text small">
				<h1><%= question.user.email %></h1>
				<h2><%= time_ago_in_words(question.created_at) unless question.created_at.blank? %> ago</h2>
			</div>
		</header>
<!-- 		<figure class="rich_media" id="image_1"></figure> -->
		<div class="supporting_text">
      <p><%= question.title %></p>
			<p><%= question.content %></p>
		</div>
    <div class="row">
      <div class="card-action">
        <%= link_to 'Show', question ,params[id: question.id]%>
        <%= link_to('follow', question_follow_path(question), remote:true,method: :post) %>
			<div class="right">
        <!-- <button class="icon"><i class="material-icons">favorite_border</i></button> -->
				<%= link_to('Like', question_like_path(question), remote:true,method: :post ,class: "like" ) %>
        <button class="icon"><i class="material-icons">comment</i><a href="#"></a></button>
<%if can? :destroy,question%>
<%= link_to ('<i class="material-icons right">delete</i>').html_safe, question, method: :delete, data: {confirm: "Are you sure?"}%>

        <%end%>
        <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Modal</a>

  <!-- Modal Structure -->
  <div id="modal1" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h4>Modal Header</h4>
      <p>A bunch of text</p>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
    </div>
  </div>
			</div>
		</div>
    </div>
  </div>
  </div>

</aside>
    </div>
