  padding-top: 130px;
  padding: 2px;
}
.row2{
  padding-top: 10px;
}
.row1{
  padding-bottom: 3px;
  padding-left: 60px;
  padding-right: 60px;
}
.card-panel1{
  background: linear-gradient(60deg, #ab47bc, #7b1fa2);
  height: 120px;
  padding-top: 4px;
  padding-bottom: 4px;
  padding-left: 10px;
  padding-right: 10px;
  margin-left: 15px;
  margin-right: 15px;
  border-radius: 5px;
}
#tabsign a.active{
  /*background: #ff4b1f;  /* fallback for old browsers */
  /* background: -webkit-linear-gradient(to right, #ff9068, #ff4b1f);  /* Chrome 10-25, Safari 5.1-6 */
